<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E8E8E8"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Hyper Wallpaper"
                android:textColor="@color/wallpaper_primary"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Natural Wallpaper"
                android:textColor="@color/wallpaper_primary"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20dp">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_nature"
                android:layout_width="match_parent"
                android:layout_height="152dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nature"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abstract Wallpaper"
                android:textColor="@color/wallpaper_primary"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20dp">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Abstract"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Art Wallpaper"
                android:textColor="@color/wallpaper_primary"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20dp">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>